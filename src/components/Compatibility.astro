---
interface Props {
	android?: boolean;
	ios?: boolean;
	macos?: boolean;
	windows?: boolean;
	ubuntu?: boolean;
	debian?: boolean;
	arch?: boolean;
}

let { android, ios, macos, windows, ubuntu, debian, arch } = Astro.props;

const distros = [ubuntu ? 'Ubuntu' : '', arch ? 'Arch' : '', debian ? 'Debian' : ''].filter(
	Boolean
);

function getDistros(arr: any[]): string {
	return `(${arr.join(', ')})`;
}
---

<div class="flex row not-content">
	{ios && <p>iOS</p>}
	{macos && <p>macOs</p>}
	{android && <p>Android</p>}
	{windows && <p>Windows</p>}
	{(debian || ubuntu || arch) && <p>Linux {getDistros(distros)}</p>}
</div>

<style>
	p {
		color: var(--sl-color-black);
		opacity: 0.7;
		background-color: var(--sl-color-accent-high);
		padding: 0px 6px 0px 6px;
		border-radius: 8px;
	}
	.disabled {
		color: var(--sl-color-black);
		background-color: var(--sl-color-accent-low);
	}
	.flex {
		display: flex;
		font-size: var(--sl-text-sm);
		flex-wrap: wrap;
		align-items: center;
	}

	.flex.row {
		gap: 0.5em 0.75em;
	}
</style>
