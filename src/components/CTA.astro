---
import { Tabs, TabItem } from '@astrojs/starlight/components';
import { Code } from '@astrojs/starlight/components';
---

<Tabs>
    <TabItem label="Bash">
        <Code code={`sh <(curl https://create.tauri.app/sh) --beta`} lang={"sh"} theme={"css-variables"} />
    </TabItem>
    <TabItem label="PowerShell">
        <Code code={`$env:CTA_ARGS="--beta"; irm https://create.tauri.app/ps | iex`} lang={"sh"} theme={"css-variables"} />
    </TabItem>
    <TabItem label="npm">
        <Code code={`npm create tauri-app@latest -- --beta`} lang={"sh"} theme={"css-variables"} />
    </TabItem>
    <TabItem label="Yarn">
        <Code code={`yarn create tauri-app --beta`} lang={"sh"} theme={"css-variables"} />
    </TabItem>
    <TabItem label="pnpm">
        <Code code={`pnpm create tauri-app --beta`} lang={"sh"} theme={"css-variables"} />
    </TabItem>
    <TabItem label="Cargo">
        <Code code={`cargo install create-tauri-app
            cargo create-tauri-app --beta`} lang={"sh"} theme={"css-variables"} />
    </TabItem>
</Tabs>
