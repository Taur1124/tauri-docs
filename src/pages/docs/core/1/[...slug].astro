---
import { CollectionEntry, getCollection } from 'astro:content'
import Layout from '../../../../layouts/Layout.astro'
import sidebar from '../../../../content/docs-core-1/_sidebar'
import LeadingSidebar from '../../../../components/Layout/LeadingSidebar.astro'

export async function getStaticPaths() {
  const collection = await getCollection('docs-core-1')
  return collection.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }))
}

interface Props {
  entry: CollectionEntry<'docs-core-1'>
}

const { entry } = Astro.props
const { Content, headings } = await entry.render()
---

<!-- TODO: need to handle getting the title more elegantly -->
<Layout title={headings[0].text}>
  <LeadingSidebar sidebarItems={sidebar} currentPageId={entry.id} />
  <Content />
</Layout>
